{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "es5",
        "types": [
            "node"
        ],
        "lib": [
            "es2017",
            "es2016",
            "es2015",
            "dom"
        ]
    },
    "include": [
        "main.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}